{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "typings"
    ]
}
